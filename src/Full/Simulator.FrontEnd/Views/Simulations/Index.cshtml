@model IEnumerable<Simulator.FrontEnd.Models.Simulation>

@{
    ViewData["Title"] = "Simulations";
}

<script type="text/javascript">

   
  
    function CreateNew() {
        $.ajax({
            cache: false,
            type: "GET",
            url: '@Url.Action("Create",null)'
        });
    }

    function Pause(id) {
        $.ajax({
            cache: false,
            type: "POST",
            url: '@Url.Action("Pause",null)'+'/'+id
        });
    }
    function Resume(id) {
        $.ajax({
            cache: false,
            type: "POST",
            url: '@Url.Action("Resume",null)'+'/'+id
        });
    }
    function Stop(id) {
        $.ajax({
            cache: false,
            type: "POST",
            url: '@Url.Action("Stop",null)'+'/'+id
        });
    }
</script>
<script type="text/javascript">
   
</script>

<h2>Simulations</h2>

<p>
    
    <a href='#' onclick='CreateNew();'>Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProjectId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TechnologyType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SimulationState)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TechnologyType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SimulationState)
            </td>
            <td>
                <a href='#' onclick='Pause("@item.ProjectId");'>Pause</a> |
                <a href='#' onclick='Resume("@item.ProjectId");'>Resume</a> |
                <a href='#' onclick='Stop("@item.ProjectId");'>Stop</a> 
            </td>
        </tr>
    }
    </tbody>
</table>

@section Scripts {

    <script src="http://ajax.aspnetcdn.com/ajax/signalr/jquery.signalr-2.2.1.min.js"></script>
<!--Reference the autogenerated SignalR hub script. -->
<script src="http://localhost:8083/signalr/hubs"></script>

    <script type="text/javascript">
        $(function () {
            $.connection.hub.url = "http://localhost:8083/signalr";
            var chat = $.connection.simulationNotificationHub;

            chat.client.simulationStateChanged = function (state) {
                location.reload();
            };

            $.connection.hub.start();
        });
    </script>
}